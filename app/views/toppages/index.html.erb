<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>本の発売日カレンダー</h1>
          <% unless logged_in? %>
            <%= link_to 'ブックカレンダーを始める', signup_path, class: 'btn btn-success btn-lg' %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'books/books', books: @books %>

<h1>発売日カレンダー</h1>

<%= month_calendar events: @interestings, attribute: :release_date do |date, books| %>
  <%= date %>
  <% books.each do |book| %>
    <div>
       <p class="book-title"><%= link_to book.name, book %></p>
      <img src="<%= book.image_url %>" width="50px" height="50px">
    </div>
  <% end %>
<% end %>

<h1>発売日未定書籍一覧</h1>
<% @books.each do |book| %>
  <div>
    <% if book.release_date == nil %>
     <p class="book-title"><%= link_to book.name, book %></p>
    <% end %>
  </div>
<% end %>