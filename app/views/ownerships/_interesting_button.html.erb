<% if current_user.interesting?(book) %>
  <%= form_tag(ownership_path(book.id), method: :delete) do %>
    <%= hidden_field_tag :book_id, book.id %>
    <%= hidden_field_tag :type, 'Interesting' %>
    <%= submit_tag 'お気に入り登録', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(ownerships_path) do %>
    <%= hidden_field_tag :book_isbn, book.isbn %>
    <%= hidden_field_tag :type, 'Interesting' %>
    <%= submit_tag 'お気に入り解除', class: 'btn btn-primary' %>
  <% end %>
<% end %>