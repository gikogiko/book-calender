<% if books.present? %>
  <div class="row">
    <% books.each do |book| %>
      <div class="book">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= book.image_url %>" alt="" >
            </div>
            <div class="panel-body">
              <% if book.persisted? %>
                <p class="book-title text-center"><%= link_to book.name, book %></p>
              <% else %>
                <p class="book-title text-center"><%= book.name %></p>
              <% end %>
                <p class="book-release_date text-center"><%= book.release_date %></p>
              <div class="buttons text-center">
                <% if logged_in? %>
                  <%= render 'ownerships/interesting_button', book: book %>
                  <%= render 'ownerships/order_button', book: book %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>